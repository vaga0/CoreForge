{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src", // 設置基礎路徑為 src
    "moduleResolution": "node", // 確保使用 Node.js 風格的模組解析
    "typeRoots": ["./node_modules/@types", "./src/types"] // 添加自訂型別路徑
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}